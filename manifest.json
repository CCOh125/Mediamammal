{
    "manifest_version": 3,
    "name": "YouTube Gemini Recommender",
    "version": "1.0",
    "description": "Shows Gemini recommendations for YouTube videos.",
    "permissions": [
      "storage"
    ],
    "host_permissions": [
      "http://localhost:3000/*"
    ],
    "action": {
      "default_title": "Mediamammal"
    },
    "background": {
  "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://www.youtube.com/*"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ]
  }